{
  "name": "less-vars",
  "displayName": "less vars",
  "description": "可提示less变量的VS Code插件",
  "publisher": "xuzhiwei",
  "version": "0.2.0",
  "repository": "https://github.com/gcdxuzhiwei/less-vars.git",
  "engines": {
    "vscode": "^1.57.0"
  },
  "keywords": [
    "less",
    "vars"
  ],
  "icon": "images/icon.jpg",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:less"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "lessVars.locations": {}
      }
    },
    "commands": [
      {
        "command": "setLocations",
        "title": "设置less变量文件路径"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == less",
          "command": "setLocations",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.57.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "ts-loader": "^9.2.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "color-alpha": "^1.1.3",
    "color-rgba": "^2.2.3",
    "get-css-colors": "^4.0.0",
    "less-vars-to-js": "^1.3.0"
  }
}
